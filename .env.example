# GroundX API Configuration
# Get your API key from: https://www.groundx.ai/
GROUNDX_API_KEY=your_groundx_api_key_here

# LLM API Configuration (OpenAI-compatible)
# IMPORTANT: Use model name WITHOUT "openai/" prefix
OPENAI_MODEL_NAME=inference-llama4-maverick
OPENAI_API_BASE=https://maas.ai-2.kvant.cloud
OPENAI_API_KEY=your_llm_api_key_here

# Langfuse Observability (Optional)
# Get your keys from: https://cloud.langfuse.com/
# Leave empty to disable observability
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# Conversation Memory (Optional)
# Set to "true" to enable conversational memory (default: last 5 message pairs)
# Set to "false" for stateless queries (each question is independent)
# To change the number of messages kept, edit max_history_messages in config.py
USE_CONVERSATION_MEMORY=true
